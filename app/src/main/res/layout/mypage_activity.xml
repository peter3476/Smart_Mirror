<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/background_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="마이페이지"
            android:textSize="20sp"
            android:textColor="#354649"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            />

        <ImageView
            android:id="@+id/mp_Profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/person_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/mp_userID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원 아이디"
                android:textColor="#2d8ca1"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/mp_Arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" >"
                android:textColor="#2d8ca1"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                />

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/btn_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="50dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="30dp"
                android:background="#00000000"
                android:src="@drawable/post"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="30dp"
                android:layout_marginLeft="50dp"
                android:background="#00000000"
                android:src="@drawable/post"/>

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="30dp"
                android:layout_marginLeft="50dp"
                android:background="#00000000"
                android:src="@drawable/post"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/btn_layout1"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="내 게시글"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="사진일기"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="설정"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/btn_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="50dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="30dp"
                android:background="#00000000"
                android:src="@drawable/post"/>

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="30dp"
                android:layout_marginLeft="50dp"
                android:background="#00000000"
                android:src="@drawable/post"/>

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="30dp"
                android:layout_marginLeft="50dp"
                android:background="#00000000"
                android:src="@drawable/post"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/btn_layout2"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="내 게시글"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="사진일기"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="설정"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>